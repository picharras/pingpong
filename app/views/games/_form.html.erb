<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :match_date %><br>
    <%= f.date_select :match_date %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <div class="field">
    <%= f.label :opponent_id %><br>
    <%= f.collection_select(:opponent_id, @opponents.all, :id, :email) %>
  </div>
  <div class="field">
    <%= f.label :user_score %><br>
    <%= f.number_field :user_score %>
  </div>
  <div class="field">
    <%= f.label :opponent_score %><br>
    <%= f.number_field :opponent_score %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
